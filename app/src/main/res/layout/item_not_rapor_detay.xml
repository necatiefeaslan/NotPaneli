<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textIlkNotLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İlk Notu:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#43A047"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/textPuanBadge"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="100"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/bg_puan_badge_modern"
                android:elevation="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/textOgrenciAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mehmet Yıldız"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222"/>

            <TextView
                android:id="@+id/textPuanlar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tüm Puanlar: 100, 50, 80"
                android:textSize="14sp"
                android:textColor="#888"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 